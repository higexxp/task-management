{
  "name": "github-task-extension",
  "version": "1.0.0",
  "description": "GitHub issue management extension system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ENABLE_REDIS=false tsx watch src/server.ts",
    "dev:redis": "ENABLE_REDIS=true tsx watch src/server.ts",
    "dev:frontend": "vite --config frontend/vite.config.ts",
    "dev:full": "concurrently --names \"API,WEB\" --prefix-colors \"blue,green\" \"npm run dev\" \"npm run dev:frontend\"",
    "build": "tsc",
    "build:frontend": "vite build --config frontend/vite.config.ts",
    "build:all": "npm run build && npm run build:frontend",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:frontend": "jest --config frontend/jest.config.js",
    "test:frontend:watch": "jest --config frontend/jest.config.js --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:frontend": "eslint frontend/src --ext .ts,.tsx",
    "lint:frontend:fix": "eslint frontend/src --ext .ts,.tsx --fix",
    "redis:start": "docker run -d --name dev-redis -p 6379:6379 redis:7-alpine redis-server --maxmemory 100mb --maxmemory-policy allkeys-lru",
    "redis:stop": "docker stop dev-redis && docker rm dev-redis",
    "redis:logs": "docker logs dev-redis",
    "redis:status": "docker ps --filter name=dev-redis",
    "docker:up": "docker-compose up -d",
    "docker:up:redis": "docker-compose --profile redis up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm install && cp .env.example .env",
    "health": "curl -s http://localhost:3000/health || echo 'Backend not running'",
    "clean": "rm -rf dist/ node_modules/.cache/ frontend/dist/",
    "dev:reset": "npm run clean && npm install"
  },
  "keywords": [
    "github",
    "issue",
    "task-management",
    "project-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.16",
    "@mui/material": "^5.14.17",
    "@octokit/auth-oauth-app": "^7.0.1",
    "@octokit/rest": "^20.0.2",
    "@tanstack/react-query": "^5.8.4",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.17.0",
    "reactflow": "^11.10.1",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "date-fns": "^2.30.0",
    "@mui/x-date-pickers": "^6.18.1",
    "redis": "^4.6.10",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-react": "^4.1.1",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "concurrently": "^8.2.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^22.1.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}